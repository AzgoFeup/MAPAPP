<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Cabeçalho-->

    <!-- Escala -->
    <!--android:button="@drawable/scale_onoff"-->
    <ToggleButton android:id="@+id/scaleButton"
        android:background="@drawable/scale_onoff"

        style="@style/toggleButton"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:onClick="changeState"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/toolbar2"
        android:layout_alignStart="@+id/voiceButton" />

    <TextView
        android:text="@string/scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scale"
        android:fontFamily="sans-serif-thin"
        android:textSize="26sp"
        android:lineSpacingExtra="10sp"
        android:layout_alignTop="@+id/scaleButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <!-- Vibração -->

    <Button android:id="@+id/vibratingButton"
        android:background="@drawable/scale_onoff"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:button="@drawable/scale_onoff"
        android:layout_below="@+id/voiceButton"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:text="@string/vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vibrating"
        android:fontFamily="sans-serif-thin"
        android:textSize="26sp"
        android:lineSpacingExtra="10sp"
        android:layout_below="@+id/voice"
        android:layout_alignStart="@+id/voice"
        android:layout_marginTop="45dp" />

    <!-- Voz -->

    <Button
        android:id="@+id/voiceButton"
        android:background="@drawable/scale_onoff"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:button="@drawable/scale_onoff"
        android:layout_below="@+id/scaleButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="@string/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/voice"
        android:fontFamily="sans-serif-thin"
        android:textSize="26sp"
        android:lineSpacingExtra="10sp"
        android:layout_alignBottom="@+id/voiceButton"
        android:layout_alignStart="@+id/scale" />

    <!-- Limpar Historico-->

    <Button android:id="@+id/cleanButton"
        android:text="@string/clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/vibrating"
        android:layout_marginBottom="200dp" />

</RelativeLayout>