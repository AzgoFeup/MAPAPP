<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/favourites_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:id="@+id/back_arrow"
        android:src="@drawable/white_arrow"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_arrow"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="FAVOURITES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/favourites_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginStart="21dp"
        android:textColor="@color/cardview_light_background"
        android:layout_toEndOf="@+id/back_arrow" />

    <Button
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:id="@+id/my_places"
        android:layout_marginTop="91dp"
        android:layout_marginStart="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/myplaces_b"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="24dp"
        android:layout_marginStart="13dp"
        android:id="@+id/my_friends"
        android:background="@drawable/myfriends_w"
        android:layout_marginTop="91dp"
        android:layout_toEndOf="@+id/favourites_text" />


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="165dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/my_friends" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="210dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignEnd="@+id/view" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="255dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignStart="@+id/my_places"
        android:layout_alignEnd="@+id/view" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignEnd="@+id/view" />

    <TextView
        android:text="LIBRARY"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:text="CANTEEN"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:text="BAR"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:text="DEEC"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="110dp"/>

    <TextView
        android:text="I221"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="110dp"/>


    <TextView
        android:text="0.3km"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="295dp"/>

    <TextView
        android:text="0.7km"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="295dp"/>

    <TextView
        android:text="0.1km"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="295dp"/>

    <TextView
        android:text="0.5km"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="295dp"/>

    <TextView
        android:text="0.2km"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="295dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@drawable/icon_canteen"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@drawable/icon_bar"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@drawable/icon_deec"
        android:id="@+id/imageView4" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@drawable/icon_room"
        android:id="@+id/imageView5" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="70dp"
        app:srcCompat="@drawable/icon_library"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true" />


</RelativeLayout>
